{
  "compilerOptions": {
    "target": "es2018",
    "module": "ESNext",
    // "outDir": "./intermediate-dist",
    "outDir": ".",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "nodenext"
  },
  "exclude": [
    "dist/**/*",
    "intermediate-dist/**/*",
  ]
}